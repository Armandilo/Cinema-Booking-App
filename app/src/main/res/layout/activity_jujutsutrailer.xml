<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:background="@color/navyblue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:context=".moviespage">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="295dp"
            android:layout_height="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="JUJUTSU KAISEN 0"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="395dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="102dp"
            android:layout_height="29dp"
            android:fontFamily="@font/poppins_bold"
            android:text="SYNOPSIS"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="450dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="329dp"
            android:layout_height="153dp"
            android:fontFamily="@font/poppins_light"
            android:text="Yuuta Okkotsu is haunted. Ever since his childhood friend Rika died in a traffic accident, her ghost has stuck with him. But her spirit does not appear as the sweet girl Yuuta once knew.
            Instead, she manifests as a monstrous and powerful entity who fiercely protects him."
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="487dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="217dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="100dp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="73dp">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="217dp" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="40dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55"
            tools:layout_editor_absoluteX="41dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="203dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_light"
            android:text="Get Ticket"
            android:textColor="@color/navyblue"
            app:cornerRadius="10px"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="759dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/categoryjk"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="301dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/durationjk"
            tools:layout_editor_absoluteY="301dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ratingjk"
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="301dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="129dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_light"
            android:text="MOVIE DETAIL"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="37dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>